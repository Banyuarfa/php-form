{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.2"
    }
  },
  "routes": [
    { "src": "/api/index.php", "dest": "/api/index.php" },
    {
      "src": "/class/FormValidator.php",
      "headers": [
        { "Access-Control-Allow-Origin": "*" },
        { "Access-Control-Allow-Methods": "POST" },
        { "Access-Control-Allow-Headers": "Content-Type, Authorization" }
      ],
      "dest": "/public/class/FormValidator.php"
    },
    { "src": "/style.css", "dest": "/public/style.css" },
    {
      "src": "/script.js",
      "dest": "/public/script.js"
    },

    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}
